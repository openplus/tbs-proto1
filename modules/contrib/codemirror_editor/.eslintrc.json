{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "es6": false,
    "node": false
  },
  "globals": {
    "Drupal": true,
    "drupalSettings": true,
    "jQuery": true,
    "CodeMirror": true
  },
  "rules": {
    "comma-dangle": "off",
    "default-case": "off",
    "func-names": "off",
    "no-alert": "off",
    "no-func-names": "off",
    "no-param-reassign": "off",
    "no-prototype-builtins": "off",
    "no-restricted-syntax": "off",
    "no-shadow": "off",
    "no-use-before-define": "off",
    "padded-blocks": "off",
    "strict": "off",
    "vars-on-top": "off",
    // ES6 rules.
    "no-var": "off",
    "object-shorthand": "off",
    "prefer-arrow-callback": "off",
    "prefer-template": "off"
  }
}
